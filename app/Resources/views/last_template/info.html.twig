{% extends "::index.html.twig" %}

{% block form %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Informations</h2>
                <hr class="my-4">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 mt-5">
            	{{ form_start(form ) }}
                {{ form_errors(form ) }}

                <div class="form-group">
                    {{ form_label(form.tickets) }}
                    {{ form_errors(form.tickets) }}
                    {{ form_widget(form.tickets) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.cgv) }}
                    {{ form_errors(form.cgv) }}
                    {{ form_widget(form.cgv) }}
                </div>

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}