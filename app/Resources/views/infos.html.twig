{% extends '::layout.html.twig' %}

		{% block content %}

		<!-- start banner Area -->
		<section class="banner-area relative" id="home">	
			<div class="overlay overlay-bg"></div>
			<div class="container">
				<div class="row d-flex align-items-center justify-content-center">
					<div class="about-content col-lg-12">
						<h1 class="text-white">
							Informations			
						</h1>
						<p class="text-white link-nav"><a href="{{ path('app_booking') }}">Réservation</a>  <span class="lnr lnr-arrow-right"></span>  Informations</p>
					</div>											
				</div>
			</div>
		</section>
		<!-- End banner Area -->

		<div class="whole-wrap">
			<div class="container">
				<div class="section-top-border">
					<div class="row d-flex justify-content-center">
						<div class="col-lg-8 col-md-8">
							{{ form_start(form ) }}
			                {{ form_errors(form ) }}

			                <div class="form-group">
			                    {{ form_label(form.tickets) }}
			                    {{ form_errors(form.tickets) }}
			                    {{ form_widget(form.tickets) }}
			                </div>

			                <div class="form-group">
			                    {{ form_label(form.email) }}
			                    {{ form_errors(form.email) }}
			                    {{ form_widget(form.email) }}
			                </div>

			                <div class="form-group">
			                    {{ form_label(form.cgv) }}
			                    {{ form_errors(form.cgv) }}
			                    {{ form_widget(form.cgv) }}
			                </div>

			                {{ form_rest(form) }}

			                <p class="mt-4">
								Veuillez vérifier vos informations de commande avant de continuer. <br/>
								Un justificatif d'identité vous sera demandé lors de votre visite. <br/>
								Il sera nécessaire de présenter sa carte d’étudiant, militaire ou équivalent lors de l’entrée pour les prix réduits.
							</p>

			                <div>
				                <a href="{{ path('app_booking') }}" class="mt-4 genric-btn info-border circle arrow">Retour</a>
								<button type="submit" class="mt-4 genric-btn info-border circle arrow pull-right">Continuer<span class="lnr lnr-arrow-right"></span></button>
							</div>

							{{ form_end(form) }}

						</div>
					</div>
				</div>
				<div class="py-5 mx-auto text-center">
					<h4>Informations prix : </h4>
					<p class="mt-3">&lt; 4 ans : 0 euros</p>
					<p>De 4 à 8 ans : 8 euros</p>
					<p>De 12 à 60 ans : 16 euros</p>
					<p>&gt; 60 ans : 12 euros</p>
					<p>Tarif réduit : 10 euros</p>
				</div>
			</div>
		</div>

		{% endblock %}